{
  "name": "puschelz-client",
  "version": "0.1.7",
  "description": "Puschelz desktop tray client for WoW addon sync",
  "main": "dist/main.js",
  "scripts": {
    "test": "vitest run src/**/*.test.ts",
    "clean": "node scripts/fs-tasks.cjs clean-dist",
    "clean:release": "node scripts/fs-tasks.cjs clean-release",
    "copy:renderer": "node scripts/fs-tasks.cjs copy-renderer",
    "build": "npm run clean && tsc -p tsconfig.json && npm run copy:renderer",
    "dist": "npm run build && npm run clean:release && electron-builder --publish never",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "test:watch": "vitest src/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puschelz/puschelz-client.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/puschelz/puschelz-client/issues"
  },
  "homepage": "https://github.com/puschelz/puschelz-client#readme",
  "private": true,
  "dependencies": {
    "chokidar": "^5.0.0",
    "fast-glob": "^3.3.3",
    "luaparse": "^0.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.puschelz.client",
    "productName": "Puschelz Client",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
